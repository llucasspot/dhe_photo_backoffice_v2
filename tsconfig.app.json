{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,

    "paths": {
      "#assets": ["src/assets"],
      "#components": ["src/components"],
      "#features/auth/i18n": ["src/features/auth/i18n"],
      "#features/auth/domain": ["src/features/auth/domain"],
      "#features/auth/react": ["src/features/auth/react"],
      "#features/dashboard/react": ["src/features/dashboard/react"],
      "#features/home/react": ["src/features/home/react"],
      "#features/products/i18n": ["src/features/products/i18n"],
      "#features/products/domain": ["src/features/products/domain"],
      "#features/products/infra": ["src/features/products/infra"],
      "#features/products/react": ["src/features/products/react"],
      "#features/projects/i18n": ["src/features/projects/i18n"],
      "#features/projects/domain": ["src/features/projects/domain"],
      "#features/projects/infra": ["src/features/projects/infra"],
      "#features/projects/react": ["src/features/projects/react"],
      "#features/schools/i18n": ["src/features/schools/i18n"],
      "#features/schools/domain": ["src/features/schools/domain"],
      "#features/schools/infra": ["src/features/schools/infra"],
      "#features/schools/react": ["src/features/schools/react"],
      "#features/settings/i18n": ["src/features/settings/i18n"],
      "#features/settings/domain": ["src/features/settings/domain"],
      "#features/settings/react": ["src/features/settings/react"],
      "#features/students/i18n": ["src/features/students/i18n"],
      "#features/students/domain": ["src/features/students/domain"],
      "#features/students/infra": ["src/features/students/infra"],
      "#features/students/react": ["src/features/students/react"],
      "#features/klasses/i18n": ["src/features/klasses/i18n"],
      "#features/klasses/domain": ["src/features/klasses/domain"],
      "#features/klasses/infra": ["src/features/klasses/infra"],
      "#features/klasses/react": ["src/features/klasses/react"],
      "#features/files/i18n": ["src/features/files/i18n"],
      "#features/files/domain": ["src/features/files/domain"],
      "#features/files/infra": ["src/features/files/infra"],
      "#features/files/react": ["src/features/files/react"],
      "#layout": ["src/layout"],
      "#di/domain": ["./src/lib/di/src/domain"],
      "#di/react": ["./src/lib/di/src/react"],
      "#di": ["./src/lib/di/src"],
      "#i18n/domain": ["./src/features/_/i18n/src/domain"],
      "#i18n/react": ["./src/features/_/i18n/src/react"],
      "#i18n": ["./src/features/_/i18n/src"],
      "#routing/domain": ["./src/features/_/routing/domain"],
      "#routing/react": ["./src/features/_/routing/react"],
      "#routing": ["./src/features/_/routing"],
      "#class-transformer": ["./libs/class-transformer"],
      "#@nestjs/common": ["./libs/@nestjs/common"],
      "#@nestjs/mapped-types": ["./libs/@nestjs/mapped-types"],
      "#core/domain": ["./src/features/_/core/domain"],
      "#core/infra": ["./src/features/_/core/infra"],
      "#core/react": ["./src/features/_/core/react"],
      "#toast/domain": ["./src/features/_/toast/domain"],
      "#toast/react": ["./src/features/_/toast/react"],
      "#toast": ["./src/features/_/toast"],
      "#mock": ["./src/features/_/mock"],
      "#mock/domain": ["./src/features/_/mock/domain"],
      "#mock/infra": ["./src/features/_/mock/infra"],
      "#api": ["./src/features/_/api"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"]
}